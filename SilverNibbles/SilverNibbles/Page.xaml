<UserControl x:Class="SilverNibbles.Page"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:sn="clr-namespace:SilverNibbles"
            Width="640"
        Height="460">
    <Grid x:Name="parentCanvas"
        Loaded="Page_Loaded" 
        Background="LightYellow"
        >
        <StackPanel Orientation="Vertical">
        <sn:Scoreboard x:Name="scoreboard"></sn:Scoreboard>
        <sn:SnakeArena x:Name="arena" ></sn:SnakeArena>
        </StackPanel>
    </Grid>
</UserControl>